{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "运行",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\运行.lua",
                "${workspaceRoot}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "配置",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\配置.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "语法检查",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\语法检查.lua",
                "${workspaceRoot}"
            ],
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Lni",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "lni",
                "${workspaceRoot}/Island.w3x",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "Obj",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "obj",
                "${workspaceRoot}",
                "${workspaceRoot}/Island.w3x"
            ]
        },
        {
            "label": "Slk",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "slk",
                "${workspaceRoot}",
                "${workspaceRoot}/Island.w3x"
            ]
        },
        {
            "label": "语法检查",
            "command": "chcp 65001  && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                ".\\tools\\jass语法检查.lua",
                "${workspaceRoot}",
                "--watch",
                "${file}",
                "${fileExtname}",
                "${fileDirname}",
                "${fileBasename}"
            ]
        },
        {
            "label": "编译",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                ".\\tools\\jass语法检查.lua",
                "${workspaceRoot}",
                "--notwatch",
                "${file}",
                "${fileExtname}",
                "${fileDirname}",
                "${fileBasename}"
            ]
        }
    ]
}